<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChordGetter.MainPage">

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label
            Text="Enter Chord"
            FontSize="24"
            FontAttributes="Bold"/>

        <Entry
            x:Name="ChordEntry"
            Placeholder="Enter Chord"
            TextChanged="OnNameTextChanged"/>

        <Button
            x:Name="SearchButton"
            Text="Search"
            Clicked="OnSearchClicked"
            IsEnabled="False"/>

        <Label
            x:Name="ChordInfo"
            Text=""
            TextColor="Green"
            IsVisible="false"/>
    </VerticalStackLayout>
</ContentPage>
